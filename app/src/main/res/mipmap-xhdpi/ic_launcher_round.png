<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.571"
            android:hint="Enter your name in BLOCK letters"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etAge"
            android:hint="Your Age" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etName" app:layout_constraintHorizontal_bias="0.571"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/etDOB" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@+id/etDOB"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etAge" app:layout_constraintHorizontal_bias="0.666"
            android:hint="Date Of Birth"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etGender" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etDOB" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.692"
            android:hint="Gender"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCaste"
            android:hint="Caste" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"/>
    <Spinner
            android:layout_width="254dp"
            android:layout_height="50dp"
            android:id="@+id/spinner1" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etGender"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown" android:popupBackground="@android:color/primary_text_dark"
            style="@style/Widget.AppCompat.Spinner" android:animateLayoutChanges="true"
            android:outlineSpotShadowColor="@color/colorAccent"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etMob"
            android:hint="Mobile Number"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/etReligion"/>
    <EditText
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etMail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etMob"
            android:hint="E-mail ID" app:layout_constraintHorizontal_bias="0.578"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etHob"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etMail" android:hint="Hobbies"
            app:layout_constraintHorizontal_bias="0.785"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etReligion" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etCaste" app:layout_constraintHorizontal_bias="0.615"
            android:hint="Religion"/>
    <Button
    